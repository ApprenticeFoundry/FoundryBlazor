@using FoundryBlazor.Shape

<RadzenCard Class="flex pr-3">
    @foreach (var cmds in GetAllCommands())
    {
        @foreach (var button in cmds.Buttons())
        {
            <RadzenButton Text="@button.DisplayText()" Click="@button.ClickAction()" ButtonStyle="ButtonStyle.Info"></RadzenButton>
        }
    }

