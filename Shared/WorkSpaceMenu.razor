@inherits WorkspaceMenuBase



<div class="position-fixed mw-25 w-100 d-flex"
    style="background-color: var(--rz-card-background-color); z-index:30">
    <div>Do the menu here</div>
    <RadzenCard Class="rz-border-radius-0">
        <RadzenMenu>
        @foreach (var menu in GetAllMenus())
        {
            <RadzenMenuItem Text="@menu.DisplayText()">
            @foreach (var button in menu.Buttons())
            {
                <RadzenMenuItem Text="@button.DisplayText()" Click="@button.ClickAction()"></RadzenMenuItem>
            }
            </RadzenMenuItem>
        }
        </RadzenMenu>
    </RadzenCard>
    
    <div>
        <WorkspaceCommand />
    </div>
</div>
