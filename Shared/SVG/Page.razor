@inherits PageBase
@using FoundryBlazor.Shared.SVG
@using FoundryBlazor.Shape

@namespace FoundryBlazor.Shared.SVG

<PanZoomG>
    <rect x="0" y="0" width="@GetPageWidth()" height="@GetPageHeight()" fill="White" stroke="White">
    </rect>
    <rect x="@GetMargin()" y="@GetMargin()" width="@GetWidth()" height="@GetHeight()" fill="@GetColor()" stroke="black">
    </rect>
    <PageGrid />
    @foreach (var shape in GetShapes1D())
    {
        <Shape1D Shape="@shape" />
    }
    @foreach (var shape in GetShapes2D())
    {
        if (shape is FoText2D obj1)
        {
            <Text2D Shape="@obj1" />
        }
        else if (shape is FoSymbol2D obj2)
        {
            <SVGShape Shape="@obj2" />
        }
        else if (shape is FoVideo2D obj3)
        {
            <Video Shape="@obj3" />
        }
        else
        {
            <Shape2D Shape="@shape" />
        }
    }
</PanZoomG>

@if (IsFenceSelecting())
{
    var rec = GetFence();
    <rect x="@rec.X" y="@rec.Y" width="@rec.Width" height="@rec.Height" fill="none" stroke-width="6" stroke="White"
        stroke-dasharray="10 10">
    </rect>
}

