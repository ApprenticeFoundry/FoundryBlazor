@inherits PageBase
@using FoundryBlazor.Shared.SVG
@using FoundryBlazor.Shape

@namespace FoundryBlazor.Shared.SVG

<PanZoomG>
    <rect x="0" y="0" width="@GetPageWidth()" height="@GetPageHeight()" fill="White" stroke="White">
    </rect>
    <rect x="@GetMargin()" y="@GetMargin()" width="@GetWidth()" height="@GetHeight()" fill="@GetColor()" stroke="black">
    </rect>
    <PageGrid />
    @foreach (var shape in GetShapes1D())
    {
        <Shape1D Shape="@shape" />
    }
    @foreach (var shape in GetShapes2D())
    {
        if (shape is FoText2D obj)
        {
            <Text2D Shape="@obj" />
        }
        else
        {
            <Shape2D Shape="@shape" />
        }
    }
</PanZoomG>

