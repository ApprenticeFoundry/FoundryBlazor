@inherits PageGridBase
@using FoundryBlazor.Shared.SVG
@namespace FoundryBlazor.Shared.SVG



@foreach (var line in GetMinortHorizontalGridSVG())
{
    <line stroke="orange" stroke-dasharray="15 10" x1="@line.X1" y1="@line.Y1" x2="@line.X2" y2="@line.Y2" />
}

@foreach (var line in GetMinorVerticalGridSVG())
{
    <line stroke="orange" stroke-dasharray="15 10" x1="@line.X1" y1="@line.Y1" x2="@line.X2" y2="@line.Y2" />
}

@foreach (var line in GetMajortHorizontalGridSVG())
{
    <line stroke="black" stroke-dasharray="15 10" stroke-width="1" x1="@line.X1" y1="@line.Y1" x2="@line.X2"
        y2="@line.Y2" />
}

@foreach (var line in GetMajorVerticalGridSVG())
{
    <line stroke="black" stroke-dasharray="15 10" stroke-width="1" x1="@line.X1" y1="@line.Y1" x2="@line.X2"
        y2="@line.Y2" />
}