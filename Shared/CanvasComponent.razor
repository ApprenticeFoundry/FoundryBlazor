@using FoundryBlazor.Shared
@inherits CanvasComponentBase

<div style="position: absolute; top: 1px; right: 1px">
    @foreach (var image in Workspace.GetDrawing()?.GetAllImages())
    {
        <img @ref="image.ImageRef" src="@image.ImageUrl" style="width: 200px; height: 100px" />
    }
</div>

<div style="position: absolute; top: 1px; left: 1px">
    @foreach (var video in Workspace.GetDrawing()?.GetAllVideos())
    {
        <video @ref="video.ImageRef" id="@video.Id" src="@video.ImageUrl" controls="true"
        style="width:400px;height:300px"></video>
    }
</div>

<div  id="canvasHolder" style="position: absolute; top: 80px; left: 0px; z-index: 10">
    <CanvasHelper @ref="CanvasHelperReference" RenderFrame="RenderFrame"  >
        <BECanvas Width=@CanvasWidth Height=@CanvasHeight @ref="CanvasReference"></BECanvas>
    </CanvasHelper>
</div> 

<div  id="fileInputHolder" style="position: absolute; top: 100px; left: 20px; z-index: 0; border: 6px dashed red">
    <InputFile OnChange="@OnFileInputChange" style="@FileInputStyle()"/>
</div> 
